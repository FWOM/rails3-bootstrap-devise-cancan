      <li>
      <%= link_to '<span class="glyphicon glyphicon-cog"></span> Admin'.html_safe, users_path %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Sign up', new_user_registration_path %>
    </li>
  <% end %>
  <% if user_signed_in? %>
      <li>
        <%= link_to '<span class="glyphicon glyphicon-off"></span> Logout'.html_safe, destroy_user_session_path, :method=>'delete' %>
      </li>
  <% else %>
      <li>
        <%= link_to 'Login', new_user_session_path %>
      </li>
  <% end %>
