<%= link_to "Portal CTO", root_path, :class => 'navbar-brand' %>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li>
      <%= link_to '<span class="glyphicon glyphicon-leaf"></span> Org Tree'.html_safe, orgtrees_path %>
    </li>
    <li>
      <%= link_to  '<span class="glyphicon glyphicon-user"></span> Edit account'.html_safe, edit_user_registration_path %>
